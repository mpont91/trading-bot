{
  "name": "trading-bot",
  "version": "1.0.0",
  "description": "Trading bot",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "dev:server": "nodemon --watch src --exec ts-node src/index.ts -- --only-server",
    "dev:market": "nodemon --watch src --exec ts-node src/index.ts -- --only-market",
    "dev:trading": "nodemon --watch src --exec ts-node src/index.ts -- --only-trading",
    "dev:account": "nodemon --watch src --exec ts-node src/index.ts -- --only-account",
    "build": "tsc",
    "serve": "node dist/index.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "migrate": "prisma migrate deploy",
    "server:status": "pm2 status trading-bot",
    "server:start": "pm2 start dist/index.js --name trading-bot",
    "server:stop": "pm2 stop trading-bot",
    "server:restart": "pm2 restart trading-bot",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll",
    "api-get-balance": "ts-node src/scripts/api/api-get-balance.ts",
    "api-get-order": "ts-node src/scripts/api/api-get-order.ts",
    "api-get-price": "ts-node src/scripts/api/api-get-price.ts",
    "api-get-kline-history": "ts-node src/scripts/api/api-get-kline-history.ts",
    "api-get-symbol": "ts-node src/scripts/api/api-get-symbol.ts",
    "api-submit-order": "ts-node src/scripts/api/api-submit-order.ts",
    "position:close": "ts-node src/scripts/position/position-close.ts",
    "position:get": "ts-node src/scripts/position/position-get.ts",
    "position:open": "ts-node src/scripts/position/position-open.ts",
    "trailing:list": "ts-node src/scripts/trailing/trailing-list.ts"
  },
  "author": "Marc Pont",
  "license": "ISC",
  "dependencies": {
    "@binance/connector-typescript": "^0.3.16",
    "@prisma/client": "^6.16.2",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv-safe": "^9.1.0",
    "express": "^5.1.0",
    "pm2": "^6.0.8",
    "technicalindicators": "^3.1.0",
    "typescript": "^5.9.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
