// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

enum Side {
  LONG  @map("long")
  SHORT @map("short")
}

enum Signal {
  BUY  @map("buy")
  SELL @map("sell")
  HOLD @map("hold")
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equity {
  id         Int      @id @default(autoincrement())
  amount     Decimal
  created_at DateTime @default(now())
}

model CommissionEquity {
  id         Int      @id @default(autoincrement())
  currency   String
  quantity   Decimal
  amount     Decimal
  created_at DateTime @default(now())
}

model Order {
  id         Int      @id @default(autoincrement())
  order_id   String
  symbol     String
  side       Side
  quantity   Decimal
  price      Decimal
  amount     Decimal
  fees       Decimal
  created_at DateTime

  @@index([symbol, side])
  @@index([symbol])
  @@index([side])
}

model Trade {
  id             Int      @id @default(autoincrement())
  symbol         String
  quantity       Decimal
  entry_order_id Int
  entry_price    Decimal
  entry_at       DateTime
  exit_order_id  Int
  exit_price     Decimal
  exit_at        DateTime
  fees           Decimal
  pnl            Decimal

  @@index([symbol])
}

model IndicatorSMA {
  id         Int      @id @default(autoincrement())
  period     Int
  symbol     String
  price      Decimal
  sma        Decimal
  created_at DateTime @default(now())
}

model IndicatorRSI {
  id         Int      @id @default(autoincrement())
  period     Int
  symbol     String
  price      Decimal
  rsi        Decimal
  created_at DateTime @default(now())
}

model IndicatorATR {
  id         Int      @id @default(autoincrement())
  period     Int
  symbol     String
  price      Decimal
  atr        Decimal
  created_at DateTime @default(now())
}

model IndicatorADX {
  id         Int      @id @default(autoincrement())
  period     Int
  symbol     String
  price      Decimal
  adx        Decimal
  pdi        Decimal
  mdi        Decimal
  created_at DateTime @default(now())
}

model IndicatorBB {
  id         Int      @id @default(autoincrement())
  period     Int
  symbol     String
  price      Decimal
  upper      Decimal
  middle     Decimal
  lower      Decimal
  pb         Decimal
  created_at DateTime @default(now())
}

model IndicatorSMACross {
  id           Int      @id @default(autoincrement())
  period_long  Int
  period_short Int
  symbol       String
  price        Decimal
  sma_long     Decimal
  sma_short    Decimal
  created_at   DateTime @default(now())
}

model Strategy {
  id         Int      @id @default(autoincrement())
  symbol     String
  price      Decimal
  signal     Signal
  sl         Decimal?
  tp         Decimal?
  ts         Decimal?
  tp_price   Decimal?
  sl_price   Decimal?
  created_at DateTime @default(now())

  @@index([symbol, signal])
  @@index([symbol])
  @@index([signal])
}

model Position {
  symbol         String   @id
  entry_order_id Int
  quantity       Decimal
  price          Decimal
  amount         Decimal
  entry_at       DateTime
}

model Trailing {
  symbol     String   @id
  tp         Decimal
  sl         Decimal
  ts         Decimal
  tp_price   Decimal
  sl_price   Decimal
  ts_price   Decimal?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
