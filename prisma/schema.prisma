// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

enum Side {
  LONG
  SHORT
}

enum Signal {
  BUY
  SELL
  HOLD
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equity {
  id         Int      @id @default(autoincrement())
  amount     Decimal
  created_at DateTime @default(now())
}

model CommissionEquity {
  id         Int      @id @default(autoincrement())
  currency   String
  quantity   Decimal
  amount     Decimal
  created_at DateTime @default(now())
}

model Order {
  id         Int      @id @default(autoincrement())
  order_id   String
  symbol     String
  side       Side
  quantity   Decimal
  price      Decimal
  amount     Decimal
  fees       Decimal
  created_at DateTime

  @@index([symbol, side])
  @@index([symbol])
  @@index([side])
}

model Trade {
  id             Int      @id @default(autoincrement())
  symbol         String
  quantity       Decimal
  entry_order_id Int
  entry_price    Decimal
  entry_at       DateTime
  exit_order_id  Int
  exit_price     Decimal
  exit_at        DateTime
  fees           Decimal
  pnl            Decimal

  @@index([symbol])
}

model Position {
  symbol         String   @id
  entry_order_id Int
  quantity       Decimal
  price          Decimal
  amount         Decimal
  entry_at       DateTime
}

model Trailing {
  symbol     String   @id
  tp         Decimal
  sl         Decimal
  ts         Decimal
  tp_price   Decimal
  sl_price   Decimal
  ts_price   Decimal?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model StrategyAction {
  id         Int      @id @default(autoincrement())
  symbol     String
  price      Decimal
  signal     Signal
  sl         Decimal?
  tp         Decimal?
  ts         Decimal?
  tp_price   Decimal?
  sl_price   Decimal?
  created_at DateTime @default(now())

  @@index([symbol, signal])
  @@index([symbol])
  @@index([signal])
}

model StrategyReport {
  id          Int      @id @default(autoincrement())
  symbol      String
  price       Decimal
  conditions  Json
  sl          Decimal?
  tp          Decimal?
  ts          Decimal?
  tp_price    Decimal?
  sl_price    Decimal?
  should_buy  Boolean
  should_sell Boolean
  created_at  DateTime @default(now())

  @@index([symbol])
}
