// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EquitySpot {
  id         Int      @id @default(autoincrement())
  amount     Decimal
  created_at DateTime @default(now())
}

model EquityFutures {
  id         Int      @id @default(autoincrement())
  amount     Decimal
  created_at DateTime @default(now())
}

model CommissionEquitySpot {
  id         Int      @id @default(autoincrement())
  currency   String
  quantity   Decimal
  amount     Decimal
  created_at DateTime @default(now())
}

model OrderSpot {
  id         Int      @id @default(autoincrement())
  order_id   String
  symbol     String
  side       String
  quantity   Decimal
  price      Decimal
  amount     Decimal
  fees       Decimal
  created_at DateTime

  @@index([symbol, side])
  @@index([symbol])
  @@index([side])
}

model OrderFutures {
  id               Int      @id @default(autoincrement())
  order_id         String
  symbol           String
  side             String
  quantity         Decimal
  contract_size    Decimal
  leverage         Int
  price            Decimal
  amount           Decimal
  amount_leveraged Decimal
  fees             Decimal
  created_at       DateTime
}

model TradeSpot {
  id             Int      @id @default(autoincrement())
  symbol         String
  side           String
  quantity       Decimal
  entry_order_id String
  entry_price    Decimal
  entry_at       DateTime
  exit_order_id  String
  exit_price     Decimal
  exit_at        DateTime
  fees           Decimal
  pnl            Decimal
}

model TradeFutures {
  id             Int      @id @default(autoincrement())
  symbol         String
  side           String
  quantity       Decimal
  contract_size  Decimal
  leverage       Int
  entry_order_id String
  entry_price    Decimal
  entry_at       DateTime
  exit_order_id  String
  exit_price     Decimal
  exit_at        DateTime
  fees           Decimal
  pnl            Decimal
}
